<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="styleTextView" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/capriola</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="styleButton" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/capriola</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>

        
    </style>
    
    <style name="styleEditText" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/capriola</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        
    </style>

    <style name="styleRadioButton" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/orange_main</item>
    </style>


    <style name="styleLinearLayout" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@drawable/flights_item_linear_night</item>
    </style>
    <style name="styleAlertDialog" parent="android:style/Theme.Dialog">
        <item name="colorAccent">@color/orange_main</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/line</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>


</resources>