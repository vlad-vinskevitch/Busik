<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_marginHorizontal="5dp"
    style="@style/styleLinearLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="textStart"
            android:id="@+id/direction_xml"
            style="@style/styleTextView"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ukr + khmel -- ukr + harkiv"
            tools:ignore="RtlCompat" />
        <ImageView
            app:tint="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_item_flights"/>
    </LinearLayout>
    <TextView
        android:id="@+id/price_cargo_xml"
        style="@style/styleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-- 10 $/kg"/>
    <TextView
        android:id="@+id/price_passenger_xml"
        style="@style/styleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-- 12 $/pasager"/>
    <TextView
        android:id="@+id/start_date_xml"
        style="@style/styleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-- otpr "/>
    <TextView
        android:id="@+id/finish_date_xml"
        style="@style/styleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-- pribitie "/>
    <TextView
        android:id="@+id/status_xml"
        style="@style/styleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-- status : 'sobir ehat'"/>
    <TextView
        android:id="@+id/note_xml"
        style="@style/styleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Podrobnosti : "/>


</LinearLayout>