<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="styleTextView" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/capriola</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="styleButton" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/capriola</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        
    </style>
    
    <style name="styleEditText" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/capriola</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        
    </style>

    <style name="styleRadioButton" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:buttonTint">@color/black</item>
    </style>
    <style name="styleRatingBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlNormal">@color/orange_main</item>
    </style>

    <style name="styleLinearLayout" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@drawable/flights_item_linear</item>
    </style>
    <style name="styleAlertDialog" parent="android:style/Theme.Dialog">
        <item name="colorAccent">@color/main_ripple</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
    </style>






</resources>